            <view class="font_28 color-666">共享者头像：<image src="{{book_library.avatar}}" mode="widthFix" style="width: 120rpx;height: 120rpx; border-radius: 50%;"/></view>
            <view class="font_28 color-666">共享者：{{book_library.name}}</view>
          </block>
          <view class="font_28 color-666">书名：{{book.title}}</view>
          <view class="font_28 color-666">作者：{{book.author}}</view>
          <view class="font_28 color-666" wx:if="{{book.publisher}}">出版社：{{book.publisher}}</view>
          <view class="font_28 color-666" wx:if="{{book.pubdate}}">出版时间：{{book.pubdate}}</view>
          <view class="font_28 color-666" wx:if="{{book.sort}}">分类：{{book.sort.name}}</view>
          <view class="font_28 color-666">ISBN编码：{{book.isbn}}</view>
