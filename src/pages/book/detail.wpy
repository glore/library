<script>
  import wepy from 'wepy'
  import { service } from '../../config.js'
  import http from '../../mixins/http'
  import base from '../../mixins/base'
  // import cart from '../../mixins/cart'
  import user from '../../mixins/user'
  import Screen from '../../components/screen'
  import ShareMessage from '../../mixins/ShareMessage'
  import Showcase from '../../components/Showcase'
  import shareComponent from '../../components/shareComponent'

  export default class mainDetail extends wepy.page {
    mixins = [base, http, user, ShareMessage]
    config = {
      navigationBarTitleText: '图书详情'
    }
    data = {
      img_banner: '',
      icon_star: '/images/icon/icon-star@2x.png',
      icon_star_active: '/images/icon/icon-star-active@2x.png',
      icon_shelf: '/images/tabbars/icon-shelf@2x.png',
      navigate: false,
      book: {},
      id: 0,
      library_id: 0,
      title: '',
      detail_pic: [],
      book_library: [],
      shareImage: ''
    }

    computed = {
      banners () {
        return this.getArray(this.book && this.book.images)
      },
      description() {
        const desc = this.book && this.book.desc
        return desc || [{
          type: 'text',
          value: '暂无图书简介'
        }]
      },
      isCollect() {
        return Boolean(this.book && +this.book.collected)
      }
    }

    onLoad(query) {
      this.book.id = query.id
      if (query && query.library_id) {
//        debugger
        this.library_id = query.library_id
      }
      this.$apply()
      this.book.title = query && query.title
    }
    onShareAppMessage(res) {
      return this.$parent.onShareAppMessage(this.config.navigationBarTitleText)
    }
    onShow() {
      this.initPageData()
      this.getSharePic()
      // google analytics
      this.$parent.getTracker(this.$root.$name, this.config.navigationBarTitleText)
    }

    onPullDownRefresh() {
      this.initPageData()
    }

    // 初始化页面数据
    initPageData() {
      // 请求图书详情
      this.getDetail()
    }

    // 获取图书信息
    getDetail() {
      let data = {}
      if (this.library_id) {
        data = {
          library_id: this.library_id
        }
      }
      this.$get({url: service.books + '/' + this.book.id + '/v2', data}, {
        success: ({code, data}) => {
          this.book = data
          this.book_library = data.book_library
          this.detail_pic = data.detail_pic
          this.$apply()
        }
      })

      // 获取书架状态，优化本页交互
      // const ids = this.getCartList().filter(({good}) => good).map(({good}) => this.getString(good.id))
      // 标识本商品已存在书架中
      /* if (ids.indexOf(this.getString(this.book.id)) > -1) {
        this.book.exist = 1
      } */
      // 切换展示库存: 0/1
      // this.book.stock = Math.abs(this.book.stock - 1)

      // ===== 随机示例：借完 -> 已加 -> 可借 -> 借完~ =====
      // const stock = this.book.stock
      // const exist = this.book.exist
      // this.book.stock = exist
      // this.book.exist = (stock + exist) % 2

      // 停止下拉状态
      wx.stopPullDownRefresh()
    }

    // 获取分享图片
    getSharePic() {
      this.$get({url: service.libraries + `/${this.library_id}/books/${this.book.id}/share`}, {
        success: ({code, data}) => {
          this.shareImage = data.pic
          this.$apply()
        }
      })
    }

    methods = {
      switchChange (id, e) {
        let isRecommend = 0
        if (e.detail.value) {
          isRecommend = 1
        } else {
          isRecommend = 0
        }
        this.$put({
          url: service.libraries + `/${this.library_id}/books/${this.book.id}/recommend`,
          data: {
            is_recommend: isRecommend
          }
        }, {
          success: ({code, data}) => {
            console.log(`ok`)
          },
          fail: ({code, data}) => {
          }
        })
      },
      link(_id, bookid, member) {
//        if (member && member.status == 'ADMIN') {
//          wx.navigateTo({url: '/pages/library/book?library_id=' + _id + '&id=' + bookid})
//        } else {
//          console.log(bookid)
        wx.navigateTo({url: '/pages/library/library?id=' + _id})
//        }
      },
      toStar() {
        // 将要发生的收藏动作
        const newType = this.isCollect ? 0 : 1
        const newTypeText = newType ? '添加' : '取消'

        // 根据业务接口处理数据
        // this.$post({url: service.collect, data: {}}, {
        //   success: ({code, data}) => {},
        //   fail: ({code, data}) => {}
        // })

        // ===== 以下随机示例 =====
        // 重置本书收藏状态
        this.book.collected = newType
        wx.showToast({
          title: `${newTypeText}收藏！`,
          icon: 'success',
          duration: 1000
        })
      },
      toBorrow() {
        // 查看书架
        wx.switchTab({url: '/pages/borrow'})
      },
      goto(url) {
        // url jump
        wx.navigateTo({url: url})
      },
      toAdd(book, item) {
        let that = this
        // 未缴纳押金 以及押金不足
        if (true) {
          return wx.showModal({
            title: '提示',
            content: `您的押金不足！请前往充值！`,
//            showCancel: false,
            confirmText: '充值押金',
            confirmColor: '#cfb64c',
            success: function (res) {
              if (res.confirm) {
                that.$cache('page')
                wx.navigateTo({
                  url: '/pages/user/cash'
                })
              } else if (res.cancel) {
                console.log('用户点击取消')
              }
            }
          })
        }
        // 不需要押金
        if (item.member) {
          wx.showModal({
            title: '借阅确认',
            content: '是否借阅该本书？',
            showCancel: true,
            success: function(res) {
              if (res.confirm) {
                that.$post({url: service.libraries + '/' + item.library_id + '/books/' + book.book_id + '/reserve'}, {
                  success: ({code, data}) => {
//                    wx.showModal({
//                      title: '预约借书成功',
//                      content: '请找管理员取书！'
//                    })
                    wx.redirectTo({
                      url: '/pages/user/borrows'
                    })
                    that.library_id = item.library_id
                    that.$apply()
                    that.getDetail()
                  }
                })
              }
            }
          })
        } else {
          wx.showModal({
            title: '提示',
            content: '你还不是该书房的会员...',
            showCancel: true,
            confirmText: '去申请',
            success: function(res) {
              if (res.confirm) {
                wx.navigateTo({url: '/pages/library/library?id=' + item.library_id})
              }
            }
          })
        }
      }
    }
    components = {
      Screen,
      Showcase,
      shareComponent
    }
  }
</script>

