<script>
  import wepy from 'wepy'
  import { service } from '../../config.js'
  import http from '../../mixins/http'
  import base from '../../mixins/base'
  import user from '../../mixins/user'
  import Loading from '../../components/loading'
  import ShareMessage from '../../mixins/ShareMessage'
  import ClassifyListV2 from '../../components/classifyListV2'
  import rollComponent from '../../components/rollComponent'
  import shareComponent from '../../components/shareComponent'
  import Calendar from 'wepy-com-calendar'
  let newDate = new Date()
  export default class shareLibrary extends wepy.page {
    mixins = [base, http, user, ShareMessage]
    config = {
      navigationBarTitleText: '友福图书馆',
      onReachBottomDistance: 200
//      navigationBarBackgroundColor: '#1473c6',
//      backgroundColor: '#1473c6',
    }
    components = {
      ClassifyListV2: ClassifyListV2,
      Loading: Loading,
      rollComponent: rollComponent,
      shareComponent: shareComponent,
      Calendar,
    }

    data = {
      loaded: false,
      // 我的图书馆
      mylib: {},
      name: '友福图书馆',
      libraries: [],
      currentDate: newDate.getFullYear() + '-' + (newDate.getMonth() + 1) + '-' + newDate.getDate(),
      selectedDates: ['2020-02-14', '2020-02-10', '2020-02-1'],
      startDate: '2020-01-01',
      endDate: '2020-02-01',
      hasIconList: [],
//      动画
      Show: false,
      isSign: true,
      rotate: false,
      changerotate: false,
      shrink: false,
      CollectAnimation: false,
      showanimation: true,
      EditAnimation: false,
      showSign:false,
      sortslist: [],
      sorts_id: 0,
      sortsindex: 0,
      dateText: '今日签到',
//      BookId: [],
      EditImage: '',
      EditTitle: '',
      EditIsbn: '',
      EditSummary: '',
      EditAuthor: '',
      ShowEdit: false,
      librarydata: [],
      BookImage: '../images/icon/icon-upload.png',
      ShowUpload: false,
      ShowSorts: false,
      library_sort_id: '',
      library_sort_list: [],
      library_sort_index: 0,
      list: [],
      library_id: '',
      shareImage: '',
      member_type: '',
      page: 1,
      formId: [],
      recommend_library_books: [],
      hiddenmodalput: true,
      last_borrows: [], // 动态
      init: false,
      loadingV2: false,
      noMore: false,
      showBackTopBtn: false, // 显示置顶
      hideFocus: true
    }
// 滚动监听
    onPageScroll(res) {
      let top = res.scrollTop,
        show = top > 380 ? true : false
      this.showBackTopBtn = show
      this.$apply()
      // console.log(top)
    }
    onShareAppMessage(res) {
      return this.$parent.onShareAppMessage(this.mylib.name)
    }
    onLoad(query) {
      this.mylib.id = query && +query.id
      this.getSignDate()
      // console.log(this.mylib.id)
      // this.$broadcast('startRenderCalendar')//通知日历组件可以开始渲染
    }
    onShow() {
      this.getshareImage()
      this.initPageData()
      this.$parent.getTracker(this.$root.$name, this.mylib.name)
    }

    onPullDownRefresh() {
      this.page = 1
      this.initPageData()
    }
    onReachBottom() {
      let vm = this
      setTimeout(() => {
        vm.initPageData()
        vm.$apply()
      }, 200)
    }
    // 初始化页面数据
    getshareImage() {
      this.$get({url: service.libraries + `/${this.mylib.id}/share`}, {
        success: ({code, data}) => {
          this.shareImage = data.pic
          this.$apply()
        },
        fail: ({code, data}) => {},
        complete: () => { }
      })
    }
    initPageData() {
      this.noMore = true
      this.loadingV2 = true
      let data = {page: this.page}
      this.$get({url: service.libraries + `/${this.mylib.id}/v3`, data}, {
        success: ({code, data}) => {
          this.mylib = data
          this.library_id = data.id
          this.member_type = data.member ? data.member.status : ''
          let name = data.sorts.map(function (item) {
            return item.name
          })
          wx.setStorageSync('libraryName', data.name) // 缓存title shareComponent获取
          this.sortslist = {name: name, index: 0, ShowSorts: false}
          wx.setNavigationBarTitle({
            title: data.name // 页面标题为路由参数
          })
          this.recommend_library_books = data.recommend_library_books
          this.last_borrows = data.last_borrows
          data = data.library_books
          data = data.data
          if (this.isArray(data) && data.length === 0) {
            this.noMore = true
            return
          }
          if (this.list.length === 0 || this.page === 1) {
            this.list = data.map(function (item) {
              return item
            })
          } else {
            console.log(data)
            console.log(this.list)
            data.map((item, index) => {
              this.list.push(item)
            })
          }
          this.init = true
          this.noMore = true
          this.page += 1
          this.$apply()
        },
        fail: ({code, data}) => { },
        complete: () => {
          this.init = true
          this.loadingV2 = false
        }
      })
    }
    getSignDate(){
      let date = new Date();
      let year = date.getFullYear()
      let month = date.getMonth() + 1
      let day = date.getDate()
      if (month < 10) {
        month = `0${month}`
      }
      if (day < 10) {
        day = `0${day}`
      }
      let dateList = [],
        nowDate = `${year}-${month}-${day}`
      this.$get({url: `${service.libraries}/${this.mylib.id}/user/sign/in/state`}, {
        success: ({code, data}) => {
          let {sign_in_histories} = data
          for (let item of sign_in_histories) {
            console.log(item.sign_in_time.split(' ')[0])
            dateList.push(item.sign_in_time.split(' ')[0])
            console.log(item.sign_in_time.split(' ')[0],nowDate)
            if (item.sign_in_time.split(' ')[0] == nowDate){
              this.isSign = false
              this.$apply()
            }
          }
          this.hasIconList = dateList
          this.$apply()
          console.log(this.hasIconList)
        },
        fail: ({code, data}) => {},
        complete: () => { }
      })
    }
    uploadFiles(filePaths, successUp, failUp, i, length) {
      let that = this
      let token = wx.getStorageSync('token')
      wx.uploadFile({
        url: service.books_upload,
        filePath: filePaths,
        method: 'POST',
        name: 'fileData',
        header: {
          'Authorization': 'Bearer ' + token,
          'content-type': 'multipart/form-data',
          'X-Requested-With': 'XMLHttpRequest'
        },
        success: (resp) => {
          that.EditImage = JSON.parse(resp.data).data
          that.$apply()
        },
        fail: (res) => {
          failUp++
        },
        complete: () => {
          i++
          if (i === length) {
          } else {
            that.uploadFiles(filePaths, successUp, failUp, i, length)
          }
        }
      })
    }
