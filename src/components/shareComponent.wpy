<script>
  import wepy from 'wepy'
  import base from '../mixins/base'


  export default class shareComponent extends wepy.component {
    props = {
      shareImage: {
        type: String,
        default: null
      }
    }
    data = {
      hide: true,
      showImage: true,
      showOpenSet: true
    }
    onLoad() {
      console.log(this.shareImage)
    }
    computed = {
    }

    methods = {
      showPic() {
        this.showImage = false
        this.$apply()
      },
      listenerCancel1() {
        this.hide = true
        this.$apply()
      },
      listenerCancel () {
        this.showImage = true
        this.$apply()
      },
      goto(url) {
        wx.navigateTo({url: url})
      },
      gotoredirect(url) {
        wx.redirectTo({url: url})
      },
      gotoTab(url) {
        wx.switchTab({url: url})
      },
      share() {
        this.hide = false
        this.$apply()
      },
      hideOpenSet () {
        this.showOpenSet = true
        this.showMap = true
        this.$apply()
      },
      // 授权访问image
      openSetting_image (e) {
        let that = this
        this.$apply()
        if (e.detail.authSetting['scope.writePhotosAlbum']) {
          that.showOpenSet = true
//          that.shareImage = true
          that.$apply()
          wepy.downloadFile({
            url: that.shareImage,
            success: (res) => {
              that.$showToast('保存中...')
              wepy.saveImageToPhotosAlbum({
                filePath: res.tempFilePath,
                success: (res) => {
                  wx.showModal({
                    title: '保存成功',
                    content: '赶紧分享给你的朋友吧！'
                  })
                },
                fail: () => {
                  console.log('取消了')
                }
              })
            },
            fail: () => {
              console.log('fail')
            }
          })
        }
      },
      saveImage (type) {
        var that = this
        console.log(that.shareImage)
        wepy.downloadFile({
          url: that.shareImage,
          success: (res) => {
            console.log(res)
            wepy.saveImageToPhotosAlbum({
              filePath: res.tempFilePath,
              success: (res) => {
                that.showImage = true
                that.$apply()
                wx.showModal({
                  title: '已保存在相册了！',
                  content: '赶紧分享给你的朋友吧！'
                })
              },
              fail: () => {
                wx.getSetting({
                  success (res) {
                    if (!res.authSetting['scope.writePhotosAlbum']) {
                      that.showImage = true
                      that.showOpenSet = false
                      that.$apply()
                    }
                  }
                })
              }
            })
          },
          fail: () => {
            console.log('fail')
          }
        })
      }
    }
  }
</script>

